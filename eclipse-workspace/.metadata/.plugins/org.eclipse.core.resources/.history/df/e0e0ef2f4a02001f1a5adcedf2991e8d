package com.mx.metodos;
import com.mx.entidad.Empleado;
//una interfaz es una plantilla de metodos  vacios sin funcionalidad
//que pueden ser implementados por cualquier otra clase

public class MetodosEmpleados {
	
	public void guardar(Empleado empleado);
	public void editar(Empleado empleado, int indice);
	public void eliminar(int indice);
	public Empleado buscar(int indice);
	public void mostrar();
}
