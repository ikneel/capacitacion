package com.ex.personas.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.ex.personas.dao.PersonasDao;
import com.ex.personas.entidad.Personas;
import com.ex.personas.respuesta.Respuesta;

@Service
public class PersonasService implements MetodosPersona{
	@Autowired
	PersonasDao dao;
	@Override
	public Respuesta guardar(Personas persona) {
	    Respuesta rs = new Respuesta();
	    
	    // Verificar si la persona es mayor de edad
	    if (persona.getEdad() < 18) {
	        rs.setMensaje("La persona no es mayor de edad por lo que no se puede registrar");
	        rs.setSucces(false);
	        rs.setObj(persona);
	        return rs;
	    }
	    
	    // Verificar si la persona ya está registrada por su CURP
	    if (dao.existsById(persona.getCurp())) {
	        rs.setMensaje("La persona no se registró porque su CURP ya está registrado");
	        rs.setSucces(false);
	        rs.setObj(persona);
	        return rs;
	    }
	    
	    // Guardar la persona
	    dao.save(persona);
	    rs.setMensaje("La persona se ha registrado");
	    rs.setSucces(true);
	    rs.setObj(persona);
	    return rs;
	}


	@Override
	public void editar(Personas persona) {
		dao.save(persona);
		
	}

	@Override
	public void eliminar(Personas persona) {
		dao.delete(persona);
		
	}

	@Override
	public Personas buscar(Personas persona) {
		persona = dao.findById(persona.getCurp()).orElse(null);
		return persona;
	}

	@Override
	public List<Personas> mostrar() {
		List<Personas> lista = (List<Personas>) dao.findAll();
		return lista;
	}

	@Override
	public List<Personas> mostrarViejos() {
		List<Personas> lista = (List<Personas>) dao.findAll();
		return lista;
	}

	@Override
	public List<Personas> mostrarGenero(String genero) {
		List<Personas> lista = (List<Personas>) dao.findAll();
		return lista;
	}

	@Override
	public List<Personas> mostrarCiudad(String ciudad) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public void calcularPeso() {
		// TODO Auto-generated method stub
		
	}

	@Override
	public Personas buscarCiudadCp(Personas persona, String ciudad, String codigoPostal) {
	
		return null;
	}

	@Override
	public Personas buscarNombreApellidos(Personas persona, String nombre, String apellidop, String apellidom) {
		// TODO Auto-generated method stub
		return null;
	}

}
